<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp">

        <ImageView
            android:id="@+id/imagenPerfilSegBasico"
            android:layout_width="138dp"
            android:layout_height="159dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp" />

        <TextView
            android:id="@+id/usuarioSegBasico"
            android:layout_width="173dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imagenPerfilSegBasico"
            android:layout_marginEnd="26dp"
            android:text="Usuario"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombreSegBasico"
            android:layout_width="174dp"
            android:layout_height="51dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/usuarioSegBasico"
            android:layout_marginTop="73dp"
            android:text="Nombre y Apellidos"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ciudadSegBasico"
            android:layout_width="172dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/imagenPerfilSegBasico"
            android:layout_alignStart="@+id/usuarioSegBasico"
            android:gravity="bottom|right"
            android:text="TextView"
            android:textStyle="italic" />


    </RelativeLayout>
</LinearLayout>
